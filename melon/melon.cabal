  -- other-extensions:
  build-depends:       base >=4.10 && <4.11
                     , aeson
                     , aeson-casing
                     , aeson-pretty
                     , async
                     , bytestring
                     , containers
                     , cryptocompare
                     , data-default
                     , decimal-arithmetic
                     , file-embed
                     , generics-sop
                     , hedgehog >=0.5.3 && <0.6
                     , lens
                     , lens-aeson
                     , memory
                     , mmorph
                     , mtl
                     , path
                     , path-io
                     , process
                     , safe-exceptions
                     , scientific
                     , template-haskell
                     , text
                     , transformers
                     , unordered-containers
                     , web3 >=0.7.1 && <0.8
                     , wreq
  ghc-options:         -Wall
  hs-source-dirs:      lib
  default-language:    Haskell2010

executable melon-property-tests
  main-is:             Main.hs
  build-depends:       base >=4.10 && <4.11
                     , aeson
                     , aeson-pretty
                     , async
                     , bytestring
                     , data-default
                     , hedgehog >=0.5.3 && <0.6
                     , lens
                     , lens-aeson
                     , melon
                     , mtl
                     , path
                     , path-io
                     , unordered-containers
                     , vector
                     , web3 >=0.7.1 && <0.8
  ghc-options:         -Wall -threaded
  hs-source-dirs:      app
  default-language:    Haskell2010
